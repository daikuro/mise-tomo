{
  "name": "misetomo-monorepo",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:app": "npm run dev -w misetomo-app",
    "dev:admin": "npm run dev -w misetomo-admin",
    "build:app": "npm run build -w misetomo-app",
    "build:admin": "npm run build -w misetomo-admin",
    "build:all": "npm run build:app && npm run build:admin",
    "check:app": "npm run check -w misetomo-app",
    "check:admin": "npm run check -w misetomo-admin",
    "check:all": "npm run check:app && npm run check:admin"
  },
  "devDependencies": {
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}